<Window x:Class="antistract.TimerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:antistract.Core"
        mc:Ignorable="d"
        Title="TimerWindow" 
        AllowsTransparency="True"
        Width="300"
        Background="Transparent"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="Manual">
    <Window.DataContext>
        <local:CurrentlySelectedPlan />
    </Window.DataContext>

    <Border Height="100"
            Width="300"
            Background="#BF88D498"
            CornerRadius="7"
            MouseDown="TitleBar_MouseDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="9*" />
                <RowDefinition Height="6*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>
                       
            <Label x:Name="CurrentlySelectedPlan" Content="{Binding SelectedPlan, UpdateSourceTrigger=PropertyChanged}">
                
            </Label>
        </Grid>
    </Border>
</Window>
