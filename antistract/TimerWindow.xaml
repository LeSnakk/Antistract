<Window x:Class="antistract.TimerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:antistract.Core"
        mc:Ignorable="d"
        Title="antistract Timer" 
        AllowsTransparency="True"
        Width="300"
        Background="Transparent"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="Manual"
        ShowInTaskbar="False">

    <Border Height="100"
            Width="300"
            Background="#BF88D498"
            CornerRadius="7"
            MouseDown="TitleBar_MouseDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*" />
                <RowDefinition Height="6*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>

            <Label Grid.Row="0" 
                   x:Name="SelectedPlanLabel" 
                   Content="{Binding SelectedPlan, UpdateSourceTrigger=PropertyChanged}">
            </Label>

            <Label x:Name="Timer"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   FontSize="45" Margin="0,10,0,0" Grid.RowSpan="2">
                00:00:00
            </Label>

            <Label x:Name="TimerSeconds"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   FontSize="25" Margin="220,18,0,0" Grid.Row="1"/>

            <Button Grid.Row="2" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Click="Button_Click">Test</Button>
        </Grid>
    </Border>
</Window>
